# ================================
# IBCM AI Environment Configuration
# All URLs are environment-based for easy deployment
# ================================

# ================================
# Environment
# ================================
ENVIRONMENT=development

# ================================
# Core Service URLs (Environment-Based)
# ================================

# Database URLs
MONGO_URI=mongodb://localhost:27017/
DB_NAME=ibcm_ai

# Cache URLs
REDIS_URL=redis://localhost:6379/0

# Message Queue URLs
KAFKA_URL=kafka://localhost:9092

# Search Engine URLs (Optional)
ELASTICSEARCH_URL=http://localhost:9200

# Backend Integration URLs
BACKEND_API_URL=http://localhost:5001/api

# ================================
# API Configuration
# ================================
AI_API_HOST=0.0.0.0
AI_API_PORT=8001

# ================================
# Security Configuration
# ================================
INTERNAL_API_KEY=ibcm_internal_ai_key_2024
EXTERNAL_API_KEYS=external_key_1,external_key_2

# ================================
# LLaMA Configuration
# ================================
USE_LLAMA=true
LLAMA_MODEL=meta-llama/Llama-2-7b-chat-hf
MODEL_CACHE_DIR=./models

# ================================
# Fine-Tuning Configuration
# ================================
ENABLE_FINE_TUNING=true
FINE_TUNING_OUTPUT_DIR=./fine_tuned_models

# ================================
# Feature Flags
# ================================
ENABLE_CONTENT_GENERATION=true
ENABLE_IMAGE_PROMPTS=true
ENABLE_VIDEO_PROMPTS=true
ENABLE_WEB_TRAINING=false

# ================================
# Hardware Configuration
# ================================
GPU_ENABLED=false
BATCH_SIZE=4
MAX_SEQUENCE_LENGTH=512
LEARNING_RATE=2e-4

# ================================
# External Services (Optional)
# ================================
OPENAI_API_KEY=
HUGGINGFACE_API_KEY=

# ================================
# Logging Configuration
# ================================
LOG_LEVEL=INFO

# ================================
# Environment-Specific Examples
# ================================

# LOCAL DEVELOPMENT:
# MONGO_URI=mongodb://localhost:27017/
# REDIS_URL=redis://localhost:6379/0
# KAFKA_URL=kafka://localhost:9092
# BACKEND_API_URL=http://localhost:5001/api

# DOCKER DEVELOPMENT:
# MONGO_URI=mongodb://mongodb:27017/
# REDIS_URL=redis://redis:6379/0
# KAFKA_URL=kafka://kafka:9092
# BACKEND_API_URL=http://backend:5001/api

# PRODUCTION:
# MONGO_URI=mongodb://prod-mongodb-cluster:27017/
# REDIS_URL=redis://prod-redis-cluster:6379/0
# KAFKA_URL=kafka://prod-kafka-cluster:9092
# BACKEND_API_URL=https://api.ibcm.app/backend

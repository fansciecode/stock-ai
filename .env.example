MONGO_URI=mongodb://localhost:27017/IBCM

# JWT Configuration
JWT_SECRET=yourjwtsecret
JWT_EXPIRE=30d

# Server Configuration
NODE_ENV=development
PORT=5000
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Frontend URLs

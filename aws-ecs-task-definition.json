{
  "family": "ai-trading-system",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "4096",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ai-trading-task-role",
  "containerDefinitions": [
    {
      "name": "ai-trading-system",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/ai-trading-system:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "8000"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "${AWS_REGION}"
        },
        {
          "name": "PYTHONUNBUFFERED",
          "value": "1"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-trading/database:database_url"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-trading/redis:redis_url"
        },
        {
          "name": "BINANCE_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-trading/binance:api_key"
        },
        {
          "name": "BINANCE_SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-trading/binance:secret_key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-trading-system",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "mountPoints": [
        {
          "sourceVolume": "ai-trading-data",
          "containerPath": "/app/data",
          "readOnly": false
        },
        {
          "sourceVolume": "ai-trading-models",
          "containerPath": "/app/models",
          "readOnly": false
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "ai-trading-data",
      "efsVolumeConfiguration": {
        "fileSystemId": "${EFS_FILE_SYSTEM_ID}",
        "rootDirectory": "/data",
        "transitEncryption": "ENABLED"
      }
    },
    {
      "name": "ai-trading-models",
      "efsVolumeConfiguration": {
        "fileSystemId": "${EFS_FILE_SYSTEM_ID}",
        "rootDirectory": "/models",
        "transitEncryption": "ENABLED"
      }
    }
  ]
}

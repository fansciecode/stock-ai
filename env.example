# üåç ENVIRONMENT CONFIGURATION
# Copy this file to .env and update with your values

# General Configuration
ENVIRONMENT=production
LOG_LEVEL=INFO

# Service Ports
CLIENT_PORT=8000
SERVER_PORT=8001
AI_MODEL_PORT=8002

# Service URLs (for Docker/Cloud deployment)
CLIENT_URL=http://localhost:8000
SERVER_URL=http://localhost:8001
AI_MODEL_URL=http://localhost:8002

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_trading
REDIS_URL=redis://localhost:6379

# Trading API Keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
ZERODHA_API_KEY=your_zerodha_api_key_here
ZERODHA_SECRET_KEY=your_zerodha_secret_key_here

# Data Sources
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
POLYGON_API_KEY=your_polygon_key_here
YAHOO_FINANCE_ENABLED=true

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# AWS Configuration (for cloud deployment)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your_aws_account_id
ECS_CLUSTER_NAME=ai-trading-cluster

# Performance Tuning
MAX_WORKERS=4
CACHE_TTL=300
MODEL_CACHE_SIZE=1000

# Feature Flags
ENABLE_LIVE_TRADING=false
ENABLE_AI_RETRAINING=true
ENABLE_REAL_DATA_FEEDS=true
ENABLE_NOTIFICATIONS=true
